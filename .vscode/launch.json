    "version": "0.2.0",
    "configurations": [                        
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha All",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/src/**/*test.js"
            ],
            "env": {
                "REGION": "us-east-1",
                "LOG_LEVEL": "debug"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Current File",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "${file}"
            ],
            "env": {
                "REGION": "us-east-1",
                "LOG_LEVEL": "debug"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Code coverage",
            "program": "${workspaceFolder}/node_modules/nyc/bin/nyc.js",
            "args": [
                "--report=text",
                "mocha",
                "--timeout",
                "999999",
                "--colors",
                "src/**/*test.js"
            ],
            "env": {
                "REGION": "us-east-1",
                "LOG_LEVEL": "debug"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}